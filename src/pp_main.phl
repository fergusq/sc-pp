module pp_main;

import phl::lang::io;
import lex;
import err;

extern read_file;
expect @ExternalFunction<@String> read_file;

@Integer main(@Integer argc, @List<@String> argv) [
	
	if (argc != 2) {
		printf("usage: %s <file>\n", argv[0]);
		return 1;
	}
	
	var str = read_file(argv[1]);
	
	var out = lex(str);
	var osize = out::size;
	for (var i = 0; i < osize; i=i+1)
		printf("%s", out[i]);
	printf("\n");
	
	return 0;
]
